<style>
    body{
        margin:0;

    }
    
    main{
        display:flex;
        height:80vh;
        flex-direction:column;
        align-items:center;
        justify-content:center;
        
    }

    .icon-container{
        display:flex;
        width:100%;
        justify-content: space-around;
        text-align:center;
        margin-top: 70px;
        font-weight:bold;
        font-size:larger;
    }
    
    .content{
        display:flex;
        flex-direction:column;
        align-items:center;
        font-weight:bold;
        font-family:Georgia, 'Times New Roman', Times, serif;
        font-size: larger;
        animation : texts 2s forwards;
        
    }
   
    @keyframes texts{
        0% {opacity:0% ; transform :translateY(-100vh) }
        50%{opacity:50% ;}
        100%{
            opacity:100% ; transform :translateX(0vh);
        }
    }

    .icon-container div:first-child{
        animation: icons 2s forwards;
    }
    .icon-container div:nth-child(2){
        animation: icons2 2s forwards;
    }
    .icon-container div:last-child{
        animation: icons3 2s forwards;
    }
    @keyframes icons{
        0% {opacity:0% ; transform :translateX(-100vh) }
        50%{opacity:50% ;}
        100%{
            opacity:100% ; transform :translateX(0vh);
        }
    }
    @keyframes icons2{
        0% {opacity:0% ; transform :translateY(100vh) }
        50%{opacity:50% ;}
        100%{
            opacity:100% ; transform :translateX(0vh);
        }
    }
    @keyframes icons3{
        0% {opacity:0% ; transform :translateX(100vh) }
        50%{opacity:50% ;}
        100%{
            opacity:100% ; transform :translateX(0vh);
        }
    }
</style>